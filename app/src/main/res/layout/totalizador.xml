<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextdataPesquisa"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTituloData"
            android:layout_marginLeft="5dp"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/buttonPesquisaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/editTextdataPesquisa"
            android:layout_below="@+id/textViewTituloData"
            android:text="Pesquisar" />

        <TextView
            android:id="@+id/textViewTotalPesoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextdataPesquisa"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#0000FF"
            android:textSize="16dp"
            android:text="" />

        <TextView
            android:id="@+id/textViewMediaPesoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTotalPesoData"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16dp"
            android:textColor="#0000FF"
            android:text="" />

        <TextView
            android:id="@+id/textViewTituloData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Data da Pesagem:" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>